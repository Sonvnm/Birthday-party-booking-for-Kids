@page "/Booking"
@model BirthdayPartyBookingForKids_Client.Pages.BookingModel
@{
    ViewData["Title"] = "Booking";
}

<h1>Booking</h1>

<form method="post">
    <div class="form-group">
        <label for="location">Location:</label>
        <select class="form-control" id="location" asp-for="Booking.LocationId" asp-items="Model.Locations">
            <option value="">Select Location</option>
        </select>
    </div>
    <div class="form-group">
        <label for="service">Service:</label>
        <select class="form-control" id="service" asp-for="Booking.ServiceId" asp-items="Model.Services">
            <option value="">Select Service</option>
        </select>
    </div>
    <div class="form-group">
        <label for="participateAmount">Participate Amount:</label>
        <input type="number" class="form-control" id="participateAmount" asp-for="Booking.ParticipateAmount">
    </div>
    <div class="form-group">
        <label for="kidBirthDay">Kid's Birthday:</label>
        <input type="date" class="form-control" id="kidBirthDay" asp-for="Booking.KidBirthDay">
    </div>
    <div class="form-group">
        <label for="kidName">Kid's Name:</label>
        <input type="text" class="form-control" id="kidName" asp-for="Booking.KidName">
    </div>
    <div class="form-group">
        <label for="kidGender">Kid's Gender:</label>
        <select class="form-control" id="kidGender" asp-for="Booking.KidGender">
            <option value="Male">Male</option>
            <option value="Female">Female</option>
        </select>
    </div>
    <div class="form-group">
        <label for="time">Time:</label>
        <input type="time" class="form-control" id="time" asp-for="Booking.Time">
    </div>
    <button type="submit" class="btn btn-primary">Book</button>
</form>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <p>@Model.ErrorMessage</p>
}




@page "/Detail"
@model BirthdayPartyBookingForKids_Client.Pages.Customer.DetailModel
@{
	ViewData["Title"] = "Detail";
	var token = Request.Cookies["access_token"];
}

<a href="/History">Return to History</a>

<h2>Detail</h2>

@if (Model.Bookings != null && Model.Bookings.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Kid Name</th>
                <th>Kid Birthday</th>
                <th>Kid Gender</th>
                <th>Total Price</th>
                <th>Participate Amount</th>
                <th>Location</th>
                <th>Service</th>
                <th>Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.Bookings)
            {
                <tr>
                    <td>@booking.DateBooking</td>
                    <td>@booking.KidName</td>
                    <td>@booking.KidBirthDay</td>
                    <td>@booking.KidGender</td>
                    <td>@booking.TotalPrice</td>
                    <td>@booking.ParticipateAmount</td>
                    <td>@booking.LocationId</td>
                    <td>@booking.ServiceId</td>
                    <td>@booking.Time</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Booking ID not found</p>
}
